            <RadzenTemplateForm TItem="KonXProWebApp.Models.db_9f8bee_konxdev.VwMidTierDashboard" Data="@(vwMidTierDashboard)" Visible="@(vwMidTierDashboard != null)" Submit="@FormSubmit">
